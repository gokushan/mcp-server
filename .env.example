# GLPI OAuth 2.1 Configuration
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_AUTHORIZATION_URL=https://your-glpi.example.com/oauth/authorize
OAUTH_TOKEN_URL=https://your-glpi.example.com/oauth/token
OAUTH_REDIRECT_URI=http://localhost:8080/callback

# Version of the application (used for Docker image tagging)
APP_VERSION=v0.1.0

# GLPI API Configuration
GLPI_API_URL=http://localhost:8080/apirest.php
GLPI_APP_TOKEN="Your GLPI app token"
GLPI_USER_TOKEN= user_token GLPI user token

# LLM Configuration (for document processing)
# Option 1: OpenAI
#LLM_PROVIDER=openai
#OPENAI_API_KEY=your-openai-api-key
#OPENAI_MODEL=gpt-4-turbo-preview

# Option 2: Anthropic
LLM_PROVIDER=anthropic
ANTHROPIC_MODEL="claude-sonnet-4-5"
ANTHROPIC_API_KEY="your api anthropic"
CLAUDE_API_URL=https://api.anthropic.com/v1/messages


# Option 3: Local LLM (Ollama)
# LLM_PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Maximum characters to send to LLM from document content
LLM_MAX_CHARS=20000

# Default timeout for LLM requests in seconds
TIMEOUT_LLM=300.0

# Enable LLM mocking for faster development
LLM_MOCK=false

# Server Configuration
# Logging level. Possible values: DEBUG, INFO, WARNING, ERROR.
# DEBUG: Most verbose, shows all details including LLM prompts (if configured).
# INFO: General information about operations and LLM interactions.
# WARNING: Only warnings and errors.
# ERROR: Only errors.
LOG_LEVEL=INFO
TOKEN_STORAGE_PATH=~/.glpi-mcp/tokens.json

# Docker User Configuration (UID/GID)
# Match these with your host user IDs to avoid permission issues on mounted volumes
USER_ID=1000
GROUP_ID=1000

# Set up transport method with MCP Server, it could be streamable-http, stdio, sse
MCP_TRANSPORT=streamable-http
# Set up host and port for the MCP Server, in this case all host can connect with MCP Server
MCP_HOST=0.0.0.0
MCP_PORT=8081

# Docker Host Paths (used in docker-compose.yml)
DOCKER_HOST_PATH_FACTURAS=/home/user/facturas
DOCKER_HOST_PATH_CONTRATOS1=/home/user/contratos1
DOCKER_HOST_PATH_CONTRATOS2=/home/user/contratos2
DOCKER_HOST_PATH_BATCH=/home/user/batch
DOCKER_HOST_PATH_PROCESADOS=/home/user/procesados
DOCKER_HOST_PATH_ERRORES=/home/user/errores

# Folders list to access as root/resources and process invoices and contracts
GLPI_ALLOWED_ROOTS = /home/gokushan/Documentos/facturas, /home/gokushan/Documentos/contratos1, /home/gokushan/Documentos/contratos2, /home/gokushan/Documentos/batch
# Type files to process 
GLPI_ALLOWED_EXTENSIONS= pdf,txt,doc,docx